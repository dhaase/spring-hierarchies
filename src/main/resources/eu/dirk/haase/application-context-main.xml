<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <beans>

        <bean class="eu.dirk.haase.bean.autowired.AutowiredAnnotationBeanPostProcessor"/>

        <bean id="childApplicationContextRegistrator" class="eu.dirk.haase.context.ChildApplicationContextRegistrator" />


        <bean id="mainServiceOne" class="eu.dirk.haase.bean.MainServiceOneImpl" >
            <property name="value" value="main-one-A"/>
        </bean>


        <bean id="mainServiceTwo" class="eu.dirk.haase.bean.MainServiceTwoImpl" >
            <property name="value" value="main-two-A"/>
        </bean>


    </beans>


</beans>